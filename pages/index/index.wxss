/**index.wxss**/
page {
  height: 100%;
  background: #f5f5f5;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.wifiList {
  flex: 1;
  overflow-y: scroll;
  box-sizing: content-box;
}

.currentWifi {
  margin: 0 20rpx;
  padding: 30rpx;
  background: #fff;
  color: #14A513;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 24rpx 2rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 28rpx;
  color: #14A513;
}

.otherWifi {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 24rpx 2rpx rgba(0, 0, 0, 0.1);
}

.wifiItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.wifiItem:nth-child(n+2) {
  padding-top: 30rpx;
}

.name {
  width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 10%;
}

.mac {
  flex: 1 0 45%;
  white-space: nowrap;
}

.info {
  padding-bottom: 20rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.setting {
  margin: 20rpx auto;
  width: 50%;
  line-height: 80rpx;
  border-radius: 80rpx;
  font-size: 32rpx;
}